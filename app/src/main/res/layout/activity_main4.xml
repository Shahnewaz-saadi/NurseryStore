<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product1"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#ffffff"

    >

    <TextView
        android:id="@+id/productNameTextView"
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:text="Product Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="182dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="   "
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/d"
        app:srcCompat="@drawable/d"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="240dp"

        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="125dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/productPriceTextView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.99 Taka"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="382dp"
        tools:ignore="MissingConstraints"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      "/>



    <TextView
        android:id="@+id/textView3"
        android:layout_width="124dp"
        android:layout_height="30dp"
        android:text="Description:"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="485dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="370dp"
        android:layout_height="29dp"
        android:text="A flower is the part of a plant that blossoms and produces "
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="523dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="373dp"
        android:layout_height="30dp"
        android:text="seeds  Flowers are also known as the bloom  or blossom of"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="554dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="369dp"
        android:layout_height="29dp"
        android:text=" a plant Flowers have petals."
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="586dp"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      ">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        >

        <Button
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="10">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "/>

        <Button
            android:id="@+id/ab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Now"
            android:textSize="20sp"
            android:layout_weight="10"
            android:textStyle="bold">
        </Button>
    </LinearLayout>


</LinearLayout>